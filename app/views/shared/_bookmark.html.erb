<div id="bookmark-<%= event.id %>-0" class="bookmark-<%= event.id %>">
<% if logged? %>
   <button class="bookmark" v-if="bookmarked == true" v-on:click="cancelBookmark">
      <span>お気に入り済</span>
      <%= fa_icon('star', class: 'cancel') %>
   </button>
   <button class="bookmark" v-else v-on:click="assignBookmark">
      <span>お気に入りに登録</span>
      <%= fa_icon('star-o', class: 'assign') %>
   </button>
   <%= content_tag :div,
      class: "event-bookmarks-vue",
      id: "event-#{event.id}-bookmark",
      data: { id: event.id,
              user: current_user.id,
              bookmarked: current_user.bookmarked?(event),
              count: event.bookmarks.count }.to_json do %><% end %>
   <% else %>
   <%= link_to bookmarks_path, class: 'bookmark' do %>
      <span>お気に入りに登録</span>
      <%= fa_icon('star-o', class: 'assign') %>
   <% end %>
   <%= content_tag :div,
      class: "event-article-vue",
      id: "event-#{event.id}-bookmark",
      data: { id: event.id,
              count: event.bookmarks.count }.to_json do %><% end %>
<% end %>
</div>
