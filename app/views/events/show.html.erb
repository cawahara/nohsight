<div id="event-show">
      <!-- イベント概要 -->
   <% if @event.publishing_status >= 3 %>
   <div class="headline">

      <h1><%= @event.title %></h1>
      <ul>
         <li><%= @event.place.title if @event.place %></li>
         <li><%= @event&.start_date&.format_with_weekday %></li>
      </ul>
      <div class="organizer">
         <% @event.users.each do |user| %>
            <%= link_to user_path(user) do %>
               <%= image_tag 'thumbnail.png' %>
               <span><%= user.name %></span>
               <span><%= '(登録者)' if user.user_events.find_by(event_id: @event.id).organizer? %></span>
            <% end %>
         <% end %>
      </div>
      <p class="category-<%= category_number(@event.category) %>"><%= @event.category %></p>
   </div>

   <!-- イベント基本情報 -->
   <div id="basic-info" class="section">
      <h1 class="section-header">基本情報</h1>

      <% if @event.information != '' %>
      <div class="article">
         <h2 class="article-header">公演詳細</h2>
         <p><%= @event.information %></p>
      </div>
      <% end %>

      <div class="article">
         <h2 class="article-header">会場案内</h2>
         <ul>
            <li>会場：<%= @event&.place&.title %></li>
            <li>住所：<%= @event&.place&.address %></li>
            <% if @event.place.official_url %>
            <li>URL：<%= link_to @event.place.official_url, @event.place.official_url, :target => '_blank'%></li>
            <% end %>
         </ul>

         <!-- 会場場所の地図 -->
         <% if @event.place.address %>
         <iframe class="event-location" src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_API_KEY'] %>&q=<%= @event&.place&.title %>"></iframe>
         <% end %>
      </div>

      <div class="article">
         <h2 class="article-header">開催日程</h2>
         <p class="start-date"><%= @event&.start_date&.format_with_weekday %></p>
         <p><%= "開場：#{@event&.open_date&.format_with_hours}" if @event.open_date %></p>
         <p><%= "開始：#{@event&.start_date&.format_with_hours}" %></p>
      </div>

      <div class="article">
         <h2 class="article-header">演目と出演者</h2>
         <table id="event-programs-info">
            <% @event.event_programs.each do |ev_program| %>
            <tr class="event-program">
               <td><%= ev_program.genre %></td>
               <td>「<%= ev_program.program.title %>」</td>
               <td></td>
            </tr>
            <% ev_program.performers.each do |performer| %>
            <tr class="event-performer">
               <td></td>
               <td></td>
               <td><%= performer.full_name %></td>
            </tr>
            <% end %>
            <% end %>
         </table>
      </div>

      <div class="article">
         <h2 class="article-header">チケット料金</h2>
         <table id="tickets-info">
            <% @event.tickets.each do |ticket| %>
            <tr class="ticket">
               <td><%= ticket.grade %></td>
               <td><%= ticket.price %>円</td>
            </tr>
            <% end %>
         </table>
      </div>

      <% if @event.official_url %>
      <div class="article">
         <h2 class="article-header">公式サイト</h2>
         <p><%= link_to @event.official_url, @event.official_url, :target => '_blank' %></p>
      </div>
      <% end %>
   </div>

   <div class="user-command">
      <% if logged? %>
         <% if @event.users.exists?(current_user.id) %>
         <%= link_to '公演の編集', edit_event_port_path(@event) %>
         <% else %>
         <%= button_to '公演編集に参加する', user_events_path(@event), method: :post %>
         <% end %>
      <% end %>
   </div>



   <!-- リクエスト承認可否 -->
   <% elsif @event.publishing_status == 1 && admin_user? %>
   <div id="event_approval">
      <div id="event-tabs">
         <div class="event-tab passive"><%= fa_icon('file-text-o') %>リクエスト一覧</div>
         <div class="event-tab"><%= fa_icon('check-square-o')%>リクエスト承認</div>
      </div>
      <div class="headline">
         <h1>リクエストの確認</h1>
         <%= link_to 'イベント一覧に戻る >', event_manage_path, class: 'port-link' %>
      </div>

      <div class="event-contents">
         <table>
            <tbody>
               <tr>
                  <td class="field">公演名</td>
                  <td class="item"><%= @event.title %></td>
               </tr>
               <tr>
                  <td class="field">開場時間</td>
                  <td class="item"><%= @event&.open_date&.format_with_weekday %></td>
               </tr>
               <tr>
                  <td class="field">開催時間</td>
                  <td class="item"><%= @event.start_date.format_with_weekday %></td>
               </tr>
               <tr>
                  <td class="field">公演の種類</td>
                  <td class="item"><%= @event.category %></td>
               </tr>
               <tr>
                  <td class="field">公演の説明</td>
                  <td class="item"><%= @event&.information %></td>
               </tr>
               <tr>
                  <td class="field">サイトURL</td>
                  <td class="item"><%= link_to @event.official_url, @event.official_url %></td>
               </tr>
               <tr class="border"><td colspan="2"></td></tr>
               <tr>
                  <td class="field">開催地</td>
                  <td class="item"><%= @event.place.title %></td>
               </tr>
               <tr>
                  <td class="field">開催地の住所</td>
                  <td class="item"><%= @event.place.address %></td>
               </tr>
               <tr>
                  <td class="field">開催地のURL</td>
                  <td class="item"><%= link_to @event&.place&.official_url, @event&.place&.official_url %></td>
               </tr>
               <tr class="border"><td colspan="2"></td></tr>
               <tr>
                  <td class="field">演目と出演者</td>
                  <td class="item">
                     <% @event.event_programs.each do |ev_program| %>
                        <p class="program"><%= ev_program.genre %><%= ev_program.program.title %></p>
                        <ul class="performers">
                           <% ev_program.event_performers.each do |ev_performer| %>
                           <li><%= ev_performer.performer.full_name %></li>
                           <% end %>
                        </ul>
                     <% end %>
                  </td>
               </tr>
               <tr class="border"><td colspan="2"></td></tr>
               <tr>
                  <td class="field">料金</td>
                  <td class="item">
                     <% @event.tickets.each do |ticket| %>
                     <p><span><%= ticket.grade %></span><span><%= ticket.price %>円</span></p>
                     <% end %>
                  </td>
               </tr>
            </tbody>
         </table>
      </div>

      <div class="approval-commands">
         <div class="form-section">
            <p>この公演情報を承認し、公開しますか？</p>
            <ul>
               <li><input class="form-approval approved" type="submit" value="承認"></li>
               <li><input class="form-approval rejected" type="submit" value="却下"></li>
            </ul>
            <p>却下の場合、下記にその理由を記入してください</p>

            <div class="lg-form">
               <%= text_area_tag :comment %>
            </div>
         </div>

      </div>
   </div>
   <% else %>
   <p>このイベントは非公開です</p>
   <% end %>
</div>
