<div id="bookmark-index">
   <%= render('shared/globalnav', object: { type: 'general', path: 'bookmarks#index' }) %>

   <div id="bookmarks">
      <% @events.each do |event| %>
      <div class="article">
         <div class="header">
            <h1><%= link_to event.title, event_path(event) %></h1>
         </div>
         <ul class="info">
            <li class="place"><%= event.place.title %></li>
            <li class="date"><%= event&.start_date&.with_formats('date', 'time') %></li>
            <li class="category category-<%= event.category %>"><%= event.category_name %></li>
         </ul>
      </div>
      <% end %>
   </div>
</div>
